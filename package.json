{
    "name": "boolean-cast-style",
    "version": "0.0.0",
    "keywords": [
        "eslint",
        "eslintplugin",
        "eslint-plugin"
    ],
    "main": "./lib/index.js",
    "exports": "./lib/index.js",
    "scripts": {
        "clean": "rimraf lib",
        "build": "tsc",
        "prettier": "prettier \"*.{js,json,yml,yaml,md}\" \"src/**/*\"",
        "format": "prettier --write \"*.{js,json,yml,yaml,md}\" \"src/**/*\"",
        "format:check": "prettier --check \"*.{js,json,yml,yaml,md}\" \"src/**/*\"",
        "test": "jest",
        "test:watch": "jest --watch",
        "prepublish": "npm run clean && npm run build",
        "prepare": "husky install",
        "release:major": "changelog -M && git add CHANGELOG.md && git commit -m 'other: обновил CHANGELOG.md' && npm version major && git push origin && git push origin --tags",
        "release:minor": "changelog -m && git add CHANGELOG.md && git commit -m 'other: обновил CHANGELOG.md' && npm version minor && git push origin && git push origin --tags",
        "release:patch": "changelog -p && git add CHANGELOG.md && git commit -m 'other: обновил CHANGELOG.md' && npm version patch && git push origin && git push origin --tags"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.1.1",
        "@commitlint/config-conventional": "^17.1.0",
        "@types/eslint": "7.2.6",
        "@types/estree": "0.0.46",
        "@types/node": "14.14.21",
        "@typescript-eslint/eslint-plugin": "^5.35.1",
        "@typescript-eslint/parser": "^5.35.1",
        "all-contributors-cli": "^6.19.0",
        "commitizen": "^4.2.5",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^7.18.0",
        "eslint-config-prettier": "^8.5.0",
        "husky": "^8.0.0",
        "jest": "26.6.3",
        "lint-staged": "^13.0.3",
        "prettier": "^2.7.1",
        "pretty-quick": "3.1.0",
        "rimraf": "3.0.2",
        "ts-jest": "26.4.4",
        "typescript": "4.1.3"
    },
    "engines": {
        "node": "^14.17.0 || ^16.0.0 || >= 18.0.0"
    },
    "peerDependencies": {
        "eslint": ">=7"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "author": "sleonia <nikita.dontsov@yahoo.com>"
}
